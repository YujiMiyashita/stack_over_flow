
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4 login" style="border: 1px solid #d3d3d3">
      <div class="google">
        <%= link_to "google", user_google_oauth2_omniauth_authorize_path ,{class: "btn btn-danger btn-lg", role: "button"} %>
      </div>
      <div class="facebook">
        <%= link_to "Facebook", user_facebook_omniauth_authorize_path ,{class: "btn btn-primary btn-lg", role: "button"} %>
      </div>

      <div class="login_form">
        <hr>
        <p class="mid_text">または</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true ,placeholder: "you@example.org",class: 'form-control'%>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "off" ,placeholder: "**********" ,class: 'form-control'%>
        </div>

        <div class="forgot">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "お忘れでしょうか?", new_password_path(resource_name) %><br />
          <% end -%>
        </div>
        <div class="actions">
          <%= f.submit "ログイン", class: 'btn btn-primary btn-lg' %>
        </div>
        <% end %>


      </div>
    </div>
    <div class="col-sm-4 col-sm-offset-4 signup" style="border: 1px solid #d3d3d3">
      <p>アカウントを持っていませんか？
        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "アカウント作成", new_registration_path(resource_name) %><br />
        <% end %>
      </p>
    </div>
  </div>
</div>
