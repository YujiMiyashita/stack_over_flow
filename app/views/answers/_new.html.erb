<div class="row">
  <hr>
  <div class="col-sm-1">
  </div>
  <div class="col-sm-1">
  </div>
  <div class="col-sm-6">
    <%= form_for(@answer, url: question_answers_path(@answer.question)) do |f| %>

    <div class="form-group">
      <h4><%= f.label :回答%></h4>
    </div>
    <div class="form-group">
      <%= f.text_area :content ,:class => "form-control", :rows => 8 %>
    </div>
    <%= f.hidden_field :question_id, value: @question.id %>
    <%= f.submit "回答を投稿",class:"btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-sm-4">
  </div>
</div>
