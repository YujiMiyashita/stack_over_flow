<%= form_for(@answer, url: question_answers_path(@answer.question)) do |f| %>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= image_tag @answer.image %>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>

  <%= f.hidden_field :question_id, value: @question.id %>

  <%= f.submit %>
<% end %>
