<% @question.answers.each do |answer| %>
  <% if answer.id then %>
    <hr>
    <p>回答 : <%= answer.content %></p>

    <%= link_to '編集', "/questions/#{answer.question_id}/answers/#{answer.id}/edit" %>
    <%= link_to '削除', "/questions/#{answer.question_id}/answers/#{answer.id}", method: :delete %>
  <% end %>
<% end %>
